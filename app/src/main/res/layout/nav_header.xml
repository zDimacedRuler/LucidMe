<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/nav_container"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <ImageView
        android:id="@+id/nav_image_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_avatar"
        android:layout_width="@dimen/nav_header_avatar_size"
        android:src="@mipmap/dummy_profile"
        android:layout_height="@dimen/nav_header_avatar_size"
        app:civ_border_width="0dp"
        app:civ_border_color="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/nav_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_alignBottom="@+id/nav_avatar"
        android:layout_toRightOf="@+id/nav_avatar"
        android:layout_toEndOf="@+id/nav_avatar" />

</RelativeLayout>